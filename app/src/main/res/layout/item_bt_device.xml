<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/blue_band_dark2"
    app:cardElevation="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:id="@+id/ll_device"
        android:background="@drawable/dark2_click_bg"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:textColor="@color/white"
                android:id="@+id/tv_device_name"
                android:textSize="@dimen/device_name_font_size"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:gravity="start|center_vertical"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tv_device_rssi"
                android:textColor="@color/blue_band_dark3"
                android:textSize="@dimen/device_mac_font_size"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:gravity="end|center_vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:textColor="@color/blue_band_dark3"
                android:id="@+id/tv_device_mac"
                android:textSize="@dimen/device_name_font_size"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:gravity="start|center_vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tv_device_status"
                android:textColor="@color/blue_band_dark3"
                android:textSize="@dimen/device_mac_font_size"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:gravity="end|center_vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>



